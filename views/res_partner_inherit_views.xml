<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_inherit_view_form" model="ir.ui.view">
        <field name="name">Res Partner Inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="active_discount_code" groups="exam_1.advanced_sale_group_manager"/>
                <field name="discount_value" attrs="{'invisible':[('active_discount_code','=',False)]}" groups="exam_1.advanced_sale_group_manager"/>
                <field name="valid_code" attrs="{'invisible':[('active_discount_code','=',False)]}" groups="exam_1.advanced_sale_group_manager"/>
            </xpath>
        </field>
    </record>

    <record id="res_partner_inherit_view_tree" model="ir.ui.view">
        <field name="name">Res Partner Inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="valid_code" optional="show" groups="exam_1.advanced_sale_group_manager"/>
                <field name="active_discount_code" type="check_box" optional="show" groups="exam_1.advanced_sale_group_manager"/>
            </xpath>
        </field>
    </record>

</odoo>