<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_inherit_view_form" model="ir.ui.view">
        <field name="name">Product Template Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_policy']" position="after">
                <field name="date_from" groups="exam_1.advanced_sale_group_manager"/>
                <field name="date_to" groups="exam_1.advanced_sale_group_manager"/>
                <field name="product_warranty" groups="exam_1.advanced_sale_group_manager"/>
                <field name="warranty_estimated_pt" groups="exam_1.advanced_sale_group_manager"/>
                <field name="warranty_left" groups="exam_1.advanced_sale_group_manager"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_inherit_view_tree" model="ir.ui.view">
        <field name="name">Product Template Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="warranty_left" optional='show'/>
            </xpath>
        </field>
    </record>

    <record id="product_template_inherit_view_search" model="ir.ui.view">
        <field name="name">Product Template Search Inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <field name="warranty_left"/>
            </xpath>
        </field>
    </record>

</odoo>